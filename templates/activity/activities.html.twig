{% extends 'base.html.twig' %}

{% block title %}Activities{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="style.css" /> 
{% endblock %}

{% block body %}
    <h1>All activities</h1>

    <ul>
        {% for activity in activities %}
            <li class="activity-list">
                <h3>{{ activity.name }}</h3>
                <ul>{{ activity.getStartDate()|date('Y-m-d') }} to {{ activity.getEndDate|date('Y-m-d') }}</ul>
                <ul>Places disponibles : {{ activity.getMaxUser() }}</ul>
                {# TODO :
                    If User logged in :
                    - Possibility to be part of the activity
                    - Possibility to quit the activity (if already in)
                #}
            </li>
        {% endfor %}
    </ul>

    {# <a href="/register" class="button-link">register</a>
    <a href="/login" class="button-link">login</a> #}

{% endblock %}
